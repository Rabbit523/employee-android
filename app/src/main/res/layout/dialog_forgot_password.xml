<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/screen_back"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <professional.wellness.health.com.employeeapp.View.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/darkBlue"
            android:text="Forgot Password"
            android:textStyle="bold"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <professional.wellness.health.com.employeeapp.View.RegularEditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/roundgrey"
                android:gravity="center"
                android:singleLine="true"
                android:maxLines="1"
                android:textColorHint="@color/darkBlue"
                android:hint="Email"
                android:textColor="@color/darkBlue" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <professional.wellness.health.com.employeeapp.View.RegularButton
                android:id="@+id/reset_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAllCaps="false"
                android:shadowColor="@color/shadow_color"
                android:background="@drawable/round_blue_dark"
                android:text="Reset Password"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>



</LinearLayout>